<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Book Project</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/libs")
</head>
<body style="background-color: #D5D5D5; height: 100%;">
    <div class="navbar navbar-fixed-top navbar-andvanced" style="border-bottom: 1px solid grey;">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="link-advanced">@Html.ActionLink("Начало", "Home", "Home", new { area = string.Empty }, null)</li>
                    <li class="link-advanced">@Html.ActionLink("За нас", "About", "Home", new { area = string.Empty }, null)</li>
                    <li class="link-advanced">@Html.ActionLink("Контакти", "Contacts", "Home", new { area = string.Empty }, null)</li>
                    @if (this.User.IsInRole("User"))
                    {
                        <li class="link-advanced">@Html.ActionLink("Моите книги", "Home", "Home", new { area = string.Empty }, null)</li>
                        <li class="link-advanced">@Html.ActionLink("Добави книга", "Add", "Book", new { area = string.Empty }, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="min-height: 616px; background-color: white;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("addBookScript", required: false)
</body>
</html>
